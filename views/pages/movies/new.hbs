<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6 bigger">

            <h1>New movie</h1>
            <hr>

            <form action="/movies/new" method="POST">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="title">
                </div>
                <div class="form-group">
                    <label for="genre">Genre</label>
                    <input type="text" class="form-control" id="genre" name="genre">
                </div>
                <div class="form-group">
                    <label for="plot">Sinopsis</label>
                    <input type="text" class="form-control" id="plot" name="plot">
                </div>

                <button type="submit" class="btn btn-dark btn-block">Add the movie to our list</button>
                <br>
                <a href="/movies/index" class="btn btn-dark btn-block">Go back to our movies list</a>
            </form>

        </div>
    </div>
</div>