<div class="container">
    <h2>Our movies</h2>
    <hr>
    <ul>
        {{#each allMovies}}
        <li>{{title}}
            <br>
            <br>
            <div class="list">
                <a href="/movies/{{id}}" class="btn btn-dark">Go to details</a>
                <a href="/movies/{{id}}/edit" class="btn btn-dark">Edit this movie</a>
                <form action="/movies/{{id}}/delete" method="POST">
                    <button type="submit" class="btn btn-dark">Delete this movie</button>
                </form>
            </div>
            <br>
            <hr>
        </li>
        {{/each}}
    </ul>
    <hr>
    <a href="/" class="btn btn-dark spaced">Back to the home page</a>
    <a href="/movies/new" class="btn btn-dark">Add a new movie</a>
    <br>
    <br>
</div>